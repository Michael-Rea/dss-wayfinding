    <div role="tabpanel" class="tab-pane active" id="dir_dept">
        <search
            ng-show="loaded"
            search-type="Departments"
            search-type-singular="Department"
            search-items="departments"
            current-item="department"
            new-item="newDepartment"
            item-changer="changeDepartment">
        </search>
        <div class="col-sm-9">
            <form method="post" class="form-horizontal directory-form" id="Department-form" action="/administration/department">
            <%# hidden_field_tag 'id' %>
            <%# hidden_field_tag 'type', type %>
            <%# hidden_field_tag request_forgery_protection_token.to_s, form_authenticity_token %>

            <div class="form-group">
              <label for="title" class="col-sm-2 control-label">Title</label>
              <div class="col-sm-10">
                <input type="text" name="title" placeholder="Title" class="form-control" ng-model="department.title" />
              </div>
            </div>

            <div class="form-group">
              <label for="room" class="col-sm-2 control-label">Room Number</label>
              <div class="col-sm-10">
                <input type="text" name="room" placeholder="Room Number" class="form-control" ng-model="department.room_number" />
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn-default" id="submit" ng-hide="editing">Create</button>
                <button class="btn btn-default" id="submit" ng-show="editing">Update</button>
                <button class="btn btn-danger pull-right" id="delete" ng-show="editing">Delete</button>
              </div>
            </div>
    </div>
